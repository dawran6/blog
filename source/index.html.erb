---
pageable: true
per_page: 10
---
<% page_articles.each_with_index do |article, i| %>
    <div class="pb5">
        <p class="black-60 serif mb0"><%= article.date.strftime('%Y %B %e') %></p>
        <h2 class="f2 mt0"><%= link_to article.title, article %></h2>
        <%= article.summary(500)%>
        <%= link_to 'Read moreâ€¦', article %>
    </div>
<% end %>

<% if paginate && num_pages > 1 %>
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
        <p><%= link_to 'Previous page', prev_page %></p>
    <% end %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p class="pb5 f3"><%= link_to 'Next page >>', next_page %></p>
  <% end %>
<% end %>
