<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Daw-Ran Liou<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= stylesheet_link_tag "tachyons.min" %>
    <%= stylesheet_link_tag "syntax" %>
    <%= stylesheet_link_tag "styles" %>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
  </head>
  <body class="sans-serif">

    <div class="ph7 pv5">
        <h1 class="f1 serif">Daw-Ran Liou</h1>
        <h2 class="f2 serif">Blog</h1>
    </div>

    <div id="main" role="main" class="ph7">
      <%= yield %>
    </div>

    <%= partial "footer"%>
  </body>
</html>
